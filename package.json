{
	"name": "world-news",
	"version": "1.0.0",
	"private": true,
	"description": "Application de presse en architecture microservices / microfrontends.",
	"scripts": {
		"prepare": "husky",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"typecheck": "npm run typecheck --workspaces --if-present",
		"test:db:up": "docker compose -f docker-compose.test.yml up -d --wait",
		"test:db:down": "docker compose -f docker-compose.test.yml down",
		"pretest": "npm run test:db:up",
		"test": "npm test --prefix writer/backend && npm test --prefix reader/backend && npm test --prefix writer/frontend && npm test --prefix reader/frontend",
		"posttest": "npm run test:db:down"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.4.2",
		"@commitlint/cli": "^20.4.1",
		"@commitlint/config-conventional": "^20.4.1",
		"@secretlint/secretlint-rule-preset-recommend": "^11.3.1",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"secretlint": "^11.3.1"
	},
	"lint-staged": {
		"*.{js,ts,jsx,tsx,json,css}": [
			"biome check --write --no-errors-on-unmatched"
		],
		"*.{js,ts,jsx,tsx,json,env,yml,yaml,toml}": [
			"secretlint"
		]
	}
}
