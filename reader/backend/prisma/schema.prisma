generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["views"]
}

datasource db {
  provider = "postgresql"
  schemas  = ["reader"]
}

view Article {
  id           Int       @unique
  title        String    @db.VarChar(300)
  subtitle     String    @db.VarChar(300)
  subhead      String    @db.VarChar(1000)
  body         String
  publish_date DateTime?
  update_date  DateTime?
  delete_date  DateTime?
  category_id  Int

  @@map("v_articles")
  @@schema("reader")
}
